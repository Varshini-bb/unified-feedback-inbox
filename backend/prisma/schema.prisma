datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model FeedbackItem {
  id          String   @id @default(uuid())
  source      String
  sourceId    String
  title       String
  description String
  severity    String
  productArea String
  createdAt   DateTime @default(now())

  notes       FeedbackNote[]

  @@index([createdAt])
  @@index([severity])
  @@index([productArea])
}

model FeedbackNote {
  id          String   @id @default(uuid())
  content     String
  feedbackId  String
  createdAt   DateTime @default(now())

  feedback    FeedbackItem @relation(fields: [feedbackId], references: [id], onDelete: Cascade)
}
